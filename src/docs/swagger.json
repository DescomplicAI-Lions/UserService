{
    "openapi": "3.0.0",
    "info": {
        "titulo": "UserService - Login/Cadastro e Validações",
        "version": "1.0.0",
        "description": "Documentação da API UserService"
    },
    "servers": [
        {
            "url": "http://localhost:3000"
        }
    ],
    "components": {
        "schemas": {
            "UserCreateDto": {
                "type": "object",
                "required": ["nome", "email", "senha", "telefone"],
                "properties": {
                    "nome": {
                        "type": "string",
                        "example": "Felipe Martins"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "felipemartins@exemplo.com"
                    },
                    "senha": {
                        "type": "string",
                        "format": "password",
                        "minLength": 6,
                        "example": "senhaSegura123"
                    },
                    "telefone": {
                        "type": "string",
                        "example": "5511987654321"
                    }
                }
            },
            "UserUpdateDto": {
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string",
                        "example": "Felipe Martins Atualizado"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "felipemartins.novo@exemplo.com"
                    },
                    "senha": {
                        "type": "string",
                        "format": "password",
                        "minLength": 6,
                        "example": "novaSenhaSegura456"
                    },
                    "telefone": {
                        "type": "string",
                        "example": "5511998877665"
                    }
                }
            },
            "UserResponseDto": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "nome": {
                        "type": "string",
                        "example": "Felipe Martins"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "felipemartins@exemplo.com"
                    },
                    "telefone": {
                        "type": "string",
                        "example": "5511987654321"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "MagicLinkRequestDto": {
                "type": "object",
                "required": ["email"],
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "felipemartins@exemplo.com"
                    }
                }
            },
            "MagicLinkAuthenticateDto": {
                "type": "object",
                "required": ["token"],
                "properties": {
                    "token": {
                        "type": "string",
                        "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    }
                }
            },
            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "error": {
                        "type": "string",
                        "example": "VALIDATION_ERROR"
                    },
                    "msg": {
                        "type": "string",
                        "example": "Nome, email e senha são obrigatórios."
                    },
                    "cid": {
                        "type": "string",
                        "format": "uuid",
                        "example": "a1b2c3d4-e5f6-7890-1234-567890abcdef"
                    }
                }
            }
        }
    },
    "paths": {
        "/health": {
            "get": {
                "summary": "Verifica a saúde da API",
                "tags": [
                    "Geral"
                ],
                "responses": {
                    "200": {
                        "description": "A API está saudável."
                    }
                }
            }
        },
        "/hello-type": {
            "get": {
                "summary": "Endpoint de exemplo",
                "tags": [
                    "Geral"
                ],
                "responses": {
                    "200": {
                        "description": "Retorna uma mensagem de saudação."
                    }
                }
            }
        },
        "/teste-error": {
            "get": {
                "summary": "Endpoint de teste de erro",
                "tags": [
                    "Geral"
                ],
                "responses": {
                    "401": {
                        "description": "Erro padrão de teste.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users": {
            "get": {
                "summary": "Retorna todos os usuários",
                "tags": [
                    "Usuário"
                ],
                "responses": {
                    "200": {
                        "description": "Lista de usuários retornada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/UserResponseDto"
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro interno do servidor.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Cadastra um novo usuário",
                "tags": [
                    "Usuário"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserCreateDto"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuário cadastrado com sucesso!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserResponseDto"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Requisição inválida, faltando campos obrigatórios ou formato incorreto.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Email não encontrado ou não entregável.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "E-mail já cadastrado.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro interno do servidor.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{id}": {
            "get": {
                "summary": "Retorna um usuário pelo ID",
                "tags": [
                    "Usuário"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        },
                        "description": "ID do usuário a ser retornado."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Usuário retornado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserResponseDto"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Usuário não encontrado.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro interno do servidor.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Atualiza um usuário existente",
                "tags": [
                    "Usuário"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        },
                        "description": "ID do usuário a ser atualizado."
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserUpdateDto"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuário atualizado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserResponseDto"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Requisição inválida, nenhum dado fornecido ou formato incorreto.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Usuário não encontrado.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro interno do servidor ou falha ao atualizar.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Deleta um usuário pelo ID",
                "tags": [
                    "Usuário"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        },
                        "description": "ID do usuário a ser deletado."
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Usuário deletado com sucesso."
                    },
                    "404": {
                        "description": "Usuário não encontrado.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro interno do servidor.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/request-magic-link": {
            "post": {
                "summary": "Solicita um link mágico para login",
                "tags": [
                    "Autenticação"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/MagicLinkRequestDto"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Se uma conta com aquele email existe, um magic link foi enviado.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "msg": {
                                            "type": "string",
                                            "example": "Se uma conta com aquele email existe, um magic link foi enviado."
                                        },
                                        "cid": {
                                            "type": "string",
                                            "format": "uuid",
                                            "example": "a1b2c3d4-e5f6-7890-1234-567890abcdef"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Email é obrigatório para solicitar um magic link.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro interno do servidor.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/authenticate-magic-link": {
            "post": {
                "summary": "Autentica usando um link mágico",
                "tags": [
                    "Autenticação"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/MagicLinkAuthenticateDto"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login com magic link realizado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                                        },
                                        "msg": {
                                            "type": "string",
                                            "example": "Successfully logged in with magic link."
                                        },
                                        "cid": {
                                            "type": "string",
                                            "format": "uuid",
                                            "example": "a1b2c3d4-e5f6-7890-1234-567890abcdef"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Token do magic link é obrigatório para autenticação.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Link de login mágico inválido ou expirado.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro interno do servidor.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}